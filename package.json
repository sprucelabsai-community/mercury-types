{
	"name": "@sprucelabs/mercury-types",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"version": "13.2.0",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.tsc": "tsc",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.babel.debug": "node --inspect-brk=5200 ../../node_modules/.bin/babel src --out-dir build --extensions \".ts,.tsx\" --root-mode upward --source-maps --copy-files",
		"build.watch": "concurrently 'yarn run build.babel --watch' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.types && yarn build.resolve-paths'\"",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"rebuild": "yarn clean && rm -rf node_modules && yarn build",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit && echo 'PASS'",
		"lint.watch": "chokidar 'src/**/*' -c 'yarn lint'",
		"lint.fix": "eslint --fix '**/*.ts'",
		"release": "semantic-release",
		"test": "jest",
		"test.watch": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "^3.0.0",
		"@sprucelabs/log": ">=10.2.294",
		"@sprucelabs/schema": ">=16.1.1",
		"@sprucelabs/spruce-core-schemas": ">=21.0.0",
		"@sprucelabs/spruce-skill-utils": ">=11.3.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/plugin-proposal-decorators": "^7.12.1",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-typescript": "^7.10.4",
		"@sprucelabs/babel-plugin-schema": "^3.1.2",
		"@sprucelabs/jest-json-reporter": ">=5.1.2",
		"@sprucelabs/semantic-release": ">=4.0.6",
		"@sprucelabs/test": ">=7.2.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"conventional-changelog-sprucelabs": "^1.1.2",
		"eslint": "^7.14.0",
		"eslint-config-spruce": "10.9.111",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"prettier": "^2.2.0",
		"ts-node": "^9.0.0",
		"typescript": "^4.1.2"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 120000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"socket.io",
			"socket.io-client",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/error",
			"@sprucelabs/jest-sheets-reporter",
			"@sprucelabs/log",
			"@sprucelabs/mercury-types",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/spruce-skill-utils",
			"@sprucelabs/test",
			"@sprucelabs/test-utils"
		]
	}
}
