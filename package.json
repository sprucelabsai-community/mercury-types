{
	"name": "@sprucelabs/mercury-types",
	"publishConfig": {
		"access": "public"
	},
	"version": "15.4.33",
	"files": [
		"build"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"node": "./build/index.js",
			"require": "./build/index.js",
			"import": "./build/esm/index.js",
			"default": "./build/esm/index.js"
		}
	},
	"module": "./build/esm/index.js",
	"description": "Types for Mercury!",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/mercury-workspace",
	"bugs": {
		"url": "https://github.com/sprucelabsai/mercury-workspace/issues"
	},
	"scripts": {
		"build.copy-files": "mkdir -p build/.spruce && cp -r ./src/.spruce/settings.json build/.spruce/settings.json",
		"build.dev": "yarn build.tsc && yarn build.resolve-paths",
		"build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.resolve-paths && yarn build.esm-postbuild",
		"build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"build.tsc": "tsc",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"clean": "rm -rf build/",
		"clean.all": "rm -rf node_modules/ yarn.lock ; yarn clean",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit && echo 'PASS'",
		"rebuild": "yarn clean.all && yarn && yarn build.dev",
		"release": "semantic-release",
		"test": "jest",
		"upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
		"watch.build.dev": "concurrently 'yarn run build.dev' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.dev'\"",
		"watch.lint": "chokidar 'src/**/*' -c 'yarn lint'"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/schema": "latest",
		"@sprucelabs/spruce-core-schemas": "latest"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": "latest",
		"@sprucelabs/esm-postbuild": "latest",
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@sprucelabs/test": "latest",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^6.0.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.21.0",
		"eslint-config-spruce": "latest",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.2",
		"yarn-upgrade-all": "^0.5.4"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 120000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/",
			"<rootDir>/build/esm/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/error",
			"@sprucelabs/esm-postbuild",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/spruce-core-schemas",
			"@sprucelabs/test",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
